{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0",
    "title": "Wallet",
    "description": "Showing off Wallet",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "https://wallet-29.herokuapp.com" }],
  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },
    {
      "name": "Transactions",
      "description": "Transactions endpoints"
    },
    {
      "name": "Categories",
      "description": "Categories endpoints"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parameters": [],
        "security": [],
        "requestBody": {
          "description": "Registration's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignapRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SignapResponce"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "409": {
            "description": "Already registered",
            "content": {}
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "parameters": [],
        "security": [],
        "requestBody": {
          "description": "Login's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponce"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Wrong email or password",
            "content": {}
          }
        }
      }
    },
    "/api/auth/logout": {
      "get": {
        "tags": ["Auth"],
        "summary": "User logout",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "204": {
            "description": "Successful operation"
          },
          "401": {
            "description": "Invalid token",
            "content": {}
          }
        }
      }
    },
    "/api/transactions": {
      "post": {
        "tags": ["Transactions"],
        "summary": "Add transaction",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "transaction's object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddTransactionRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddTransactionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          }
        }
      },
      "get": {
        "tags": ["Transactions"],
        "summary": "Get the list of transactions",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetTransactionsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {}
          },
          "401": {
            "description": "Invalid token",
            "content": {}
          }
        }
      }
    },
    "/api/categories": {
      "get": {
        "tags": ["Categories"],
        "summary": "Get the list of Categories",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetCategoriesResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid token",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignapRequest": {
        "type": "object",
        "required": ["password", "email"],
        "properties": {
          "password": {
            "type": "string",
            "description": "User's password"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "example": "guest@gmail.com"
          },
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30,
            "example": "Максим"
          }
        }
      },
      "SignapResponce": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "code": {
            "type": "number",
            "example": "201"
          },
          "message": {
            "type": "string",
            "example": "Register success"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["password", "email"],
        "properties": {
          "password": {
            "type": "string",
            "description": "User's password"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "example": "guest@gmail.com"
          }
        }
      },
      "LoginResponce": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "code": {
            "type": "number",
            "example": "200"
          },
          "data": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYxOTEwYzMwMzdkZWExMjZlY2RmZThlYyIsImlhdCI6MTYzNjkwMDc0NX0.YZEA6IZn2m0lfPZO5aLWZ2V6ib63qmJz25o4beF66Yc"
              }
            }
          }
        }
      },

      "AddTransactionRequest": {
        "type": "object",
        "required": ["type", "amount", "date", "owner"],
        "properties": {
          "type": {
            "type": "string",
            "description": "transaction type",
            "enum": ["income", "cost"]
          },
          "category": {
            "type": "string",
            "description": "costr's category",
            "example": "Образование"
          },
          "amount": {
            "type": "number",
            "minimum": 0,
            "example": 29000.0
          },
          "date": {
            "type": "date",
            "example": "2021-11-10T22:00:00.000+00:00"
          },
          "comment": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30,
            "example": "Курс GoIt"
          }
        }
      },
      "AddTransactionResponse": {
        "type": "object",
        "properties": {
          "orderNumber": {
            "type": "Number",
            "description": "transaction's order number",
            "minimum": 1,
            "example": "1"
          },
          "type": {
            "type": "string",
            "description": "transaction's type",
            "enum": ["income", "cost"]
          },
          "category": {
            "type": "string",
            "description": "cost's category",
            "example": "Образование"
          },
          "amount": {
            "type": "number",
            "minimum": 0,
            "description": "transaction's amount",
            "example": 29000.0
          },
          "date": {
            "type": "date",
            "description": "transaction's date",
            "example": "2021-11-10T22:00:00.000+00:00"
          },
          "comment": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30,
            "example": "Курс GoIt"
          },
          "balance": {
            "type": "number",
            "minimum": 0
          },
          "owner": {
            "type": "string",
            "description": "owner's id",
            "example": "617812c23a1c9a214a15f473"
          },
          "_id": {
            "type": "string",
            "description": "transaction's id",
            "example": "618d8ba39e09530b79bf311b"
          },
          "createdAt": {
            "type": "date",
            "description": "transaction's creation date",
            "example": "2021-11-10T22:00:00.000+00:00"
          },
          "updatedAt": {
            "type": "date",
            "description": "transaction's updating date",
            "example": "2021-11-10T22:00:00.000+00:00"
          }
        }
      },
      "GetTransactionsResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "orderNumber": {
              "type": "Number",
              "description": "transaction's order number",
              "minimum": 1,
              "example": "1"
            },
            "type": {
              "type": "string",
              "description": "transaction's type",
              "enum": ["income", "cost"]
            },
            "category": {
              "type": "string",
              "description": "cost's category",
              "example": "Образование"
            },
            "amount": {
              "type": "number",
              "minimum": 0,
              "description": "transaction's amount",
              "example": 29000.0
            },
            "date": {
              "type": "date",
              "description": "transaction's date",
              "example": "2021-11-10T22:00:00.000+00:00"
            },
            "comment": {
              "type": "string",
              "minLength": 2,
              "maxLength": 30,
              "example": "Курс GoIt"
            },
            "balance": {
              "type": "number",
              "minimum": 0
            },
            "owner": {
              "type": "string",
              "description": "owner's id",
              "example": "617812c23a1c9a214a15f473"
            },
            "_id": {
              "type": "string",
              "description": "transaction's id",
              "example": "618d8ba39e09530b79bf311b"
            },
            "createdAt": {
              "type": "date",
              "description": "transaction's creation date",
              "example": "2021-11-10T22:00:00.000+00:00"
            },
            "updatedAt": {
              "type": "date",
              "description": "transaction's updating date",
              "example": "2021-11-10T22:00:00.000+00:00"
            }
          }
        }
      },
      "GetCategoriesResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "transaction type",
              "enum": ["income", "cost"]
            },
            "name": {
              "type": "string",
              "description": "category name",
              "example": "Образование"
            },
            "colour": {
              "type": "string",
              "example": "green"
            },
            "owner": {
              "type": "string",
              "description": "owner id",
              "example": "617812c23a1c9a214a15f473"
            },
            "_id": {
              "type": "string",
              "description": "category id",
              "example": "618d8ba39e09530b79bf311b"
            },
            "createdAt": {
              "type": "date",
              "description": "category creation date",
              "example": "2021-11-10T22:00:00.000+00:00"
            },
            "updatedAt": {
              "type": "date",
              "description": "category updating date",
              "example": "2021-11-10T22:00:00.000+00:00"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
