{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0",
    "title": "Wallet",
    "description": "Showing off Wallet",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{ "url": "https://wallet-29.herokuapp.com" }],
  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },
    {
      "name": "Transactions",
      "description": "Transactions endpoints"
    },
    {
      "name": "Categories",
      "description": "Categories endpoints"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "User registration",
        "parameters": [],
        "security": [],
        "requestBody": {
          "description": "Registration object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignapRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SignapResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "409": {
            "description": "Already registered",
            "content": {}
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "User login",
        "parameters": [],
        "security": [],
        "requestBody": {
          "description": "Login object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "401": {
            "description": "Wrong email or password",
            "content": {}
          }
        }
      }
    },
    "/api/auth/current": {
      "get": {
        "tags": ["Auth"],
        "summary": "Current User",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CurrentUserResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid token",
            "content": {}
          }
        }
      }
    },

    "/api/auth/logout": {
      "get": {
        "tags": ["Auth"],
        "summary": "User logout",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "204": {
            "description": "Successful operation"
          },
          "401": {
            "description": "Invalid token",
            "content": {}
          }
        }
      }
    },
    "/api/transactions": {
      "post": {
        "tags": ["Transactions"],
        "summary": "Add transaction",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "description": "transaction object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddTransactionRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddTransactionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          }
        }
      },
      "get": {
        "tags": ["Transactions"],
        "summary": "Get the list of transactions",
        "parameters": [
          {
            "in": "query",
            "name": "month",
            "schema": {
              "type": "integer"
            },
            "description": "Month query."
          },
          {
            "in": "query",
            "name": "year",
            "schema": {
              "type": "integer"
            },
            "description": "Year query."
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetTransactionsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {}
          },
          "401": {
            "description": "Invalid token",
            "content": {}
          }
        }
      }
    },
    "/api/categories": {
      "get": {
        "tags": ["Categories"],
        "summary": "Get the list of Categories",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetCategoriesResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid token",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignapRequest": {
        "type": "object",
        "required": ["password", "email"],
        "properties": {
          "password": {
            "type": "string",
            "description": "User password"
          },
          "email": {
            "type": "string",
            "description": "User email",
            "example": "guest@gmail.com"
          },
          "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30,
            "example": "Максим"
          }
        }
      },
      "SignapResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "code": {
            "type": "number",
            "example": "201"
          },
          "message": {
            "type": "string",
            "example": "Register success"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["password", "email"],
        "properties": {
          "password": {
            "type": "string",
            "description": "User password"
          },
          "email": {
            "type": "string",
            "description": "User email",
            "example": "guest@gmail.com"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "code": {
            "type": "number",
            "example": "200"
          },
          "data": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYxOTEwYzMwMzdkZWExMjZlY2RmZThlYyIsImlhdCI6MTYzNjkwMDc0NX0.YZEA6IZn2m0lfPZO5aLWZ2V6ib63qmJz25o4beF66Yc"
              },
              "user": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "User email",
                    "example": "guest@gmail.com"
                  },
                  "name": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 30,
                    "example": "Максим"
                  },
                  "balance": {
                    "type": "number",
                    "minimum": 0,
                    "example": "10000"
                  }
                }
              }
            }
          }
        }
      },
      "CurrentUserResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "code": {
            "type": "number",
            "example": "200"
          },
          "data": {
            "type": "object",
            "properties": {
              "token": {
                "type": "string",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYxOTEwYzMwMzdkZWExMjZlY2RmZThlYyIsImlhdCI6MTYzNjkwMDc0NX0.YZEA6IZn2m0lfPZO5aLWZ2V6ib63qmJz25o4beF66Yc"
              },
              "email": {
                "type": "string",
                "description": "User email",
                "example": "guest@gmail.com"
              },
              "name": {
                "type": "string",
                "minLength": 2,
                "maxLength": 30,
                "example": "Максим"
              },
              "balance": {
                "type": "number",
                "minimum": 0,
                "example": "10000"
              }
            }
          }
        }
      },

      "AddTransactionRequest": {
        "type": "object",
        "required": ["type", "amount", "date", "owner"],
        "properties": {
          "type": {
            "type": "string",
            "description": "transaction type",
            "enum": ["income", "cost"]
          },
          "category": {
            "type": "string",
            "description": "cost category Id",
            "example": "618ee208c1d4bca46f1074ca"
          },
          "amount": {
            "type": "number",
            "minimum": 0,
            "example": 29000.0
          },
          "date": {
            "type": "date",
            "example": "2021-11-10"
          },
          "comment": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30,
            "example": "Курс GoIt"
          }
        }
      },
      "AddTransactionResponse": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "transaction type",
            "enum": ["income", "cost"]
          },
          "category": {
            "type": "string",
            "description": "cost category Id",
            "example": "618ee208c1d4bca46f1074ca"
          },
          "amount": {
            "type": "number",
            "minimum": 0,
            "description": "transaction amount",
            "example": 29000.0
          },
          "date": {
            "type": "date",
            "description": "transaction date",
            "example": "2021-11-10T22:00:00.000+00:00"
          },
          "comment": {
            "type": "string",
            "minLength": 2,
            "maxLength": 30,
            "example": "Курс GoIt"
          },
          "balance": {
            "type": "number",
            "minimum": 0
          },
          "owner": {
            "type": "string",
            "description": "owner id",
            "example": "617812c23a1c9a214a15f473"
          },
          "_id": {
            "type": "string",
            "description": "transaction  id",
            "example": "618d8ba39e09530b79bf311b"
          },
          "createdAt": {
            "type": "date",
            "description": "transaction  creation date",
            "example": "2021-11-10T22:00:00.000+00:00"
          },
          "updatedAt": {
            "type": "date",
            "description": "transaction  updating date",
            "example": "2021-11-10T22:00:00.000+00:00"
          }
        }
      },
      "GetTransactionsResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "transaction  type",
              "enum": ["income", "cost"]
            },
            "category": {
              "type": "string",
              "description": "cost category Id",
              "example": "618ee208c1d4bca46f1074ca"
            },
            "amount": {
              "type": "number",
              "minimum": 0,
              "description": "transaction  amount",
              "example": 29000.0
            },
            "date": {
              "type": "date",
              "description": "transaction  date",
              "example": "2021-11-10T22:00:00.000+00:00"
            },
            "comment": {
              "type": "string",
              "minLength": 2,
              "maxLength": 30,
              "example": "Курс GoIt"
            },
            "balance": {
              "type": "number",
              "minimum": 0
            },
            "owner": {
              "type": "string",
              "description": "owner  id",
              "example": "617812c23a1c9a214a15f473"
            },
            "_id": {
              "type": "string",
              "description": "transaction  id",
              "example": "618d8ba39e09530b79bf311b"
            },
            "createdAt": {
              "type": "date",
              "description": "transaction  creation date",
              "example": "2021-11-10T22:00:00.000+00:00"
            },
            "updatedAt": {
              "type": "date",
              "description": "transaction  updating date",
              "example": "2021-11-10T22:00:00.000+00:00"
            }
          }
        },
        "example": [
          {
            "_id": "61904798c252619ec0bdf299",
            "type": "cost",
            "category": "618ee1c7c1d4bca46f1074c9",
            "amount": 4000,
            "date": "2021-11-12T22:00:00.000Z",
            "comment": "Бензин",
            "balance": 38600,
            "owner": "619041eb7dc0726ccedb6e2a",
            "createdAt": "2021-11-13T23:17:44.318Z",
            "updatedAt": "2021-11-13T23:17:44.318Z"
          },
          {
            "_id": "619049be5e2bfcc87f74b010",
            "type": "cost",
            "category": "618ee1c7c1d4bca46f1074c9",
            "amount": 400,
            "date": "2021-11-12T22:00:00.000Z",
            "comment": "Масло",
            "balance": 38200,
            "owner": "619041eb7dc0726ccedb6e2a",
            "createdAt": "2021-11-13T23:26:54.169Z",
            "updatedAt": "2021-11-13T23:26:54.169Z"
          }
        ]
      },
      "GetCategoriesResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "transaction type",
              "enum": ["income", "cost"]
            },
            "name": {
              "type": "string",
              "description": "category name",
              "example": "Образование"
            },
            "colour": {
              "type": "string",
              "example": "green"
            },
            "owner": {
              "type": "string",
              "description": "owner id",
              "example": "617812c23a1c9a214a15f473"
            },
            "_id": {
              "type": "string",
              "description": "category id",
              "example": "618d8ba39e09530b79bf311b"
            },
            "createdAt": {
              "type": "date",
              "description": "category creation date",
              "example": "2021-11-10T22:00:00.000+00:00"
            },
            "updatedAt": {
              "type": "date",
              "description": "category updating date",
              "example": "2021-11-10T22:00:00.000+00:00"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
